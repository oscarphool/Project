<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.calculadora.CalculadoraFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        android:paddingBottom="0dp">

        <TextView
            android:id="@+id/tv_upOperation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:fontFamily="@font/roboto_thin"
            android:gravity="bottom|end"
            android:padding="15dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_downRes"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="0"
            android:fontFamily="@font/roboto_thin"
            android:textAlignment="textEnd"
            android:textColor="#FFFFFF"
            android:textSize="60sp"
            android:padding="15dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:backgroundTint="@color/black"
            android:layout_weight="6"
            android:padding="10dp"
            android:background="#292d36"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:backgroundTint="@color/black"
                android:layout_weight="1">


                <Button
                    android:id="@+id/btn_parLeft"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="("
                    android:textColor="@color/grisclaro"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />
                <Button
                    android:id="@+id/btn_parRight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text=")"
                    android:textColor="@color/grisclaro"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />
                <Button
                    android:id="@+id/btn_ans"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:onClick="btn_ans_press"
                    android:textColor="#26FCD5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />
                <Button
                    android:id="@+id/btn_del"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:onClick="btn_del_press"
                    android:text="⌫"
                    android:textColor="@color/anaranjado"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />
                <Button
                    android:id="@+id/btn_clear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="clr"
                    android:textColor="@color/anaranjado"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_n7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="7"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />
                <Button
                    android:id="@+id/btn_n8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="8"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />
                <Button
                    android:id="@+id/btn_n9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="9"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />
                <Button
                    android:id="@+id/btn_opPer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="%"
                    android:textColor="@color/anaranjado"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />
                <Button
                    android:id="@+id/btn_opRoot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:onClick="btn_opRoot_press"
                    android:text="√"
                    android:textColor="@color/anaranjado"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_n4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="4"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />
                <Button
                    android:id="@+id/btn_n5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="5"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />
                <Button
                    android:id="@+id/btn_n6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="6"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />
                <Button
                    android:id="@+id/btn_opMul"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="x"
                    android:textColor="@color/anaranjado"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />
                <Button
                    android:id="@+id/btn_opDiv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="÷"
                    android:textColor="@color/anaranjado"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_n1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />
                <Button
                    android:id="@+id/btn_n2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="2"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />
                <Button
                    android:id="@+id/btn_n3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="3"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />
                <Button
                    android:id="@+id/btn_opAdd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="+"
                    android:textColor="@color/anaranjado"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />
                <Button
                    android:id="@+id/btn_opMin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="-"
                    android:textColor="@color/anaranjado"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_n0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="2.15"
                    android:backgroundTint="@color/black"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />
                <Button
                    android:id="@+id/btn_dot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text=","
                    android:textColor="#ffff"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,OnClick,UsingOnClickInXml" />
                <Button
                    android:id="@+id/btn_equal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="2.15"
                    android:backgroundTint="@color/black"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="="
                    android:textColor="@color/anaranjado"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>